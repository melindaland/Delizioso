{% block contenu %}

<!-- Main -->

<div class="block-fils">
    <h1>
        CATALOGUE :

    </h1>
    <h2>
        Top 5 des gâteaux les plus populaires

    </h2>
    {% for gateau in categorie %}
    <h3>
        <a href="#gateau{{ gateau.id }}">
            {{ gateau.nom }}
        </a>
    </h3>
    {% endfor %}
    {# Boucle qui va prendre en compte les informations sur le gâteau ci-dessous#}

    {% for gateau in categorie %}
    <h3>
        {{ gateau.nom }}
    </h3>
    <div class="gateau_container" id="gateau{{ gateau.id }}">

        <div class="image-gateau">
            {# Insertion image #}
            <img src="{{ gateau.url_image }}" alt="{{ gateau.alt_image }}">
            <p>
                {{ gateau.commentaire }}
            </p>
        </div>

        <div class="texte1-gateau">
            <h4>
                Provenance📍:

                {{ gateau.pays }}
            </h4>
            <h4>
                Créateur 👨‍🍳:
                {{ gateau.createur }}
            </h4>
            <h4>
                Histoire 📖 :

            </h4>
            <p>
                {{ gateau.biographie }}
            </p>
        </div>
        <div class="texte2-gateau">
            <h4>
                Composition du

                {{ gateau.nom }}
                🍰 :

            </h4>
            <p>
                {{ gateau.description }}
            </p>
        </div>
        <div class="video-gateau">
            <h4>
                Comment réaliser le gâteau :

                {{ gateau.nom }}
                ?

            </h4>
            {# Insertion lien-video #}
            <a href="{{ gateau.video }}">
                Voir la recette du

                {{ gateau.nom }}
                en vidéo 🎬
            </a>
        </div>
        <h3>Informations complémentaires</h3>
        <div class="infos">
            <div class="commentaires">
                <h4>Avis des internautes : <h4>
                {% for commentaire in gateau.commentaires %}
                <div class="commentaire">
                    <p>{{ commentaire.utilisateur }} a dit : {{ commentaire.avis }}</p>
                    <p>Note : {{ commentaire.note }}/5</p>
                </div>
                {% endfor %}
            </div>
        
            <div class="note">
                <h4>Evaluation : </h4>
                <p>Temps de préparation : {{ gateau.note.tempspreparation }}</p>
                <p>Difficulté : {{ gateau.note.difficulte }}</p>
                <p>Niveau : {{ gateau.note.niveau }}</p>
            </div>
        </div>
    </div>
    {% endfor %}

</div>
{% endblock contenu %}

